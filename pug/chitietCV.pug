                .login.d-none
                    p Đăng nhập 
                .register.d-none 
                    p Đăng ký 
    .section-body.container.mb-5
        .row
            .container-left.col-sm-12.col-lg-8.mb-5
                .item-top.d-flex.justify-content-between.align-items-center
                    .item-title
                        .title-cv Inter Java Spring  
                        .title-cmp Fpt Software
                    .item-info
                        .kinhnghiem
                            p <box-icon name='xing' type='logo' ></box-icon> Kinh nghiệm : 8 - 12 năm 
                        .luong 
                            p <box-icon name='money' ></box-icon> Lương : 800$
                        .hanchot 
                            p <box-icon class='bx-flashing' type='solid' name='alarm-exclamation'></box-icon> Hạn chót : 10/03/2003
                .item-bot.col-12
                    .item-bot-title.d-flex.align-items-center 
                        .hang
                        .title-chitiet Chi tiết tuyển dụng 
                    ul Mô tả tuyển dụng 
                        li điều 1
                        li điều 2
                        li điều 3
                        li điều 4
                    ul Yều cầu ứng viên 
                        li điều 1
